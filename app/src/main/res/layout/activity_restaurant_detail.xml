<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="restaurnatDetailActivity"
            type="com.hdh.baekalleyproject.ui.restaurant_detail.RestaurantDetailActivity" />
    </data>


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <View
            android:id="@+id/vToolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/vBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/vToolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/tvBack"
            app:layout_constraintTop_toTopOf="@+id/vToolbar" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:src="@drawable/button_arrow_back"
            app:layout_constraintBottom_toBottomOf="@+id/vToolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vToolbar" />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/notosans"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="7.7sp"
            android:text="식당찾기"
            android:textColor="#222222"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/vToolbar"
            app:layout_constraintLeft_toRightOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="@+id/vToolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="7.7sp"
            android:text="연돈 수작 돈카츠"
            android:textColor="#222222"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/vToolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vToolbar" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:src="@drawable/button_restaurant_detail_more"
            app:layout_constraintBottom_toBottomOf="@+id/vToolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vToolbar" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_share"
            app:layout_constraintBottom_toBottomOf="@+id/vToolbar"
            app:layout_constraintRight_toLeftOf="@+id/ivMore"
            app:layout_constraintTop_toTopOf="@+id/vToolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvRestaurantImageList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:background="#e9eeee"
                        android:nestedScrollingEnabled="false">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tvAlley"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21.7dp"
                        android:fontFamily="@font/notosans"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="7sp"
                        android:text="포방터시장"
                        android:textColor="#17b1c4"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvRestaurantImageList" />

                    <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tvAlley"
                        app:layout_constraintLeft_toLeftOf="@+id/tvAlley"
                        android:layout_marginTop="2dp"
                        android:text="연돈 수작 돈카츠"
                        android:textSize="24dp"
                        android:fontFamily="@font/dohyeon"
                        android:includeFontPadding="false"
                        android:textColor="#222222"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="5.7sp"/>

                    <TextView
                        android:id="@+id/tvRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textColor="#ff4f4f"
                        android:textSize="36dp"
                        android:fontFamily="@font/notosans"
                        android:includeFontPadding="false"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvRestaurantImageList"
                        android:layout_marginTop="27.3dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_questionmark"
                        app:layout_constraintTop_toTopOf="@+id/tvGo"
                        app:layout_constraintLeft_toLeftOf="@+id/tvRanking"
                        app:layout_constraintRight_toRightOf="@+id/tvRanking"/>

                    <TextView
                        android:id="@+id/tvViewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수: 7,500"
                        app:layout_constraintTop_toBottomOf="@+id/tvRestaurantName"
                        app:layout_constraintLeft_toLeftOf="@+id/tvAlley"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/notosans"
                        android:includeFontPadding="false"
                        android:textColor="#666666"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#dddddd"
                        app:layout_constraintLeft_toRightOf="@+id/tvViewCount"
                        app:layout_constraintRight_toLeftOf="@+id/tvReview"
                        app:layout_constraintTop_toTopOf="@+id/tvViewCount"
                        app:layout_constraintBottom_toBottomOf="@+id/tvViewCount"/>

                    <TextView
                        android:id="@+id/tvReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리뷰: 54"
                        app:layout_constraintTop_toTopOf="@+id/tvViewCount"
                        app:layout_constraintLeft_toRightOf="@+id/tvViewCount"
                        android:fontFamily="@font/notosans"
                        android:includeFontPadding="false"
                        android:textColor="#666666"
                        android:layout_marginLeft="16dp"
                        android:textSize="13dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#dddddd"
                        app:layout_constraintLeft_toRightOf="@+id/tvReview"
                        app:layout_constraintRight_toLeftOf="@+id/tvGo"
                        app:layout_constraintTop_toTopOf="@+id/tvViewCount"
                        app:layout_constraintBottom_toBottomOf="@+id/tvViewCount"/>


                    <TextView
                        android:id="@+id/tvGo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가야쥬: 370"
                        app:layout_constraintTop_toTopOf="@+id/tvViewCount"
                        app:layout_constraintLeft_toRightOf="@+id/tvReview"
                        android:fontFamily="@font/notosans"
                        android:includeFontPadding="false"
                        android:textColor="#666666"
                        android:layout_marginLeft="16dp"
                        android:textSize="13dp"
                        />


                    <View
                        android:layout_width="158dp"
                        android:layout_height="50dp"/>
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>


        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</layout>