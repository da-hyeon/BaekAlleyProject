<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="248dp"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/vTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_top_ff4f4f"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/vTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vTop"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        android:text="공유하기"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="20sp"/>

    <View
        android:id="@+id/vMid"
        android:layout_width="match_parent"
        android:layout_height="170.7dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/vTop" />

    <View
        android:id="@+id/vKakao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/ivKakao"
        app:layout_constraintBottom_toBottomOf="@+id/tvKakao"
        app:layout_constraintLeft_toLeftOf="@+id/tvKakao"
        app:layout_constraintRight_toRightOf="@+id/tvKakao"/>

    <ImageView
        android:id="@+id/ivKakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_kakaotalk"
        app:layout_constraintTop_toTopOf="@+id/vMid"
        app:layout_constraintLeft_toLeftOf="@+id/vMid"
        android:layout_marginTop="20.3dp"
        android:layout_marginLeft="53.3dp"/>

    <TextView
        android:id="@+id/tvKakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오톡"
        android:textSize="12dp"
        android:textColor="#333333"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/ivKakao"
        app:layout_constraintLeft_toLeftOf="@+id/ivKakao"
        app:layout_constraintRight_toRightOf="@+id/ivKakao"
        android:layout_marginTop="3.9dp"/>


    <View
        android:id="@+id/vFaceBook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/ivFaceBook"
        app:layout_constraintBottom_toBottomOf="@+id/tvFaceBook"
        app:layout_constraintLeft_toLeftOf="@+id/tvFaceBook"
        app:layout_constraintRight_toRightOf="@+id/tvFaceBook"/>

    <ImageView
        android:id="@+id/ivFaceBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_facebook"
        app:layout_constraintTop_toTopOf="@+id/vMid"
        app:layout_constraintRight_toRightOf="@+id/vMid"
        android:layout_marginTop="19.3dp"
        android:layout_marginRight="51dp"/>


    <TextView
        android:id="@+id/tvFaceBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="페이스북"
        android:textSize="12dp"
        android:textColor="#333333"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/ivFaceBook"
        app:layout_constraintLeft_toLeftOf="@+id/ivFaceBook"
        app:layout_constraintRight_toRightOf="@+id/ivFaceBook"
        android:layout_marginTop="5.7dp"/>


    <View
        android:id="@+id/vURLCopy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/ivURLCopy"
        app:layout_constraintBottom_toBottomOf="@+id/tvURLCopy"
        app:layout_constraintLeft_toLeftOf="@+id/tvURLCopy"
        app:layout_constraintRight_toRightOf="@+id/tvURLCopy"/>

    <ImageView
        android:id="@+id/ivURLCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_urlcopy"
        app:layout_constraintBottom_toBottomOf="@+id/vMid"
        app:layout_constraintLeft_toLeftOf="@+id/vMid"
        android:layout_marginBottom="37.8dp"
        android:layout_marginLeft="56.3dp"/>

    <TextView
        android:id="@+id/tvURLCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL복사"
        android:textSize="12dp"
        android:textColor="#333333"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/ivURLCopy"
        app:layout_constraintLeft_toLeftOf="@+id/ivURLCopy"
        app:layout_constraintRight_toRightOf="@+id/ivURLCopy"
        android:layout_marginTop="2.9dp"/>

    <View
        android:id="@+id/vDismiss"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/round_bottom_ffffff"
        app:layout_constraintTop_toBottomOf="@+id/vMid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:textSize="16dp"
        android:textColor="#ff4f4f"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@+id/vDismiss"
        app:layout_constraintBottom_toBottomOf="@+id/vDismiss"
        app:layout_constraintLeft_toLeftOf="@+id/vDismiss"
        app:layout_constraintRight_toRightOf="@+id/vDismiss"/>


</android.support.constraint.ConstraintLayout>