<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_user_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="2.7sp"
            android:text="황다현"
            android:textColor="#333333"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/ivUserImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="4.7sp"
            android:text="17시간 전"
            android:textColor="#999999"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
            app:layout_constraintLeft_toRightOf="@+id/tvUserName"
            app:layout_constraintTop_toTopOf="@+id/tvUserName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.3dp"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            android:text="모짜렐라 치즈 돈까스 / 규카츠"
            android:textColor="#17b1c4"
            android:textSize="11dp"
            app:layout_constraintLeft_toLeftOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_good"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="맛있는 맛집"
            android:textColor="#222222"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />

        <TextView
            android:id="@+id/tvReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="백종원의 골목식당에서 맛있어 보여서 오늘 친구랑 찾아가
봤는데 예상보다 너무 좋았다. 모짜렐라 치즈 돈까스와 규카
츠를 시켰는데 생각보다 빠르게 나와렐라 치즈 돈까스와 규카
츠를 시켰는데 생각보다 빠르게 나와asdasdad"
            app:layout_constraintTop_toBottomOf="@+id/tvReviewTitle"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/ivLikeMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_heart"
            app:layout_constraintTop_toBottomOf="@+id/tvReviewContent"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvLikeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivLikeMark"
            app:layout_constraintTop_toTopOf="@+id/ivLikeMark"
            app:layout_constraintBottom_toBottomOf="@+id/ivLikeMark"
            android:text="좋아요"
            android:layout_marginLeft="8.7dp"
            android:textSize="13dp"
            android:textColor="#666666"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            />


        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tvLikeText"
            app:layout_constraintTop_toTopOf="@+id/ivLikeMark"
            app:layout_constraintBottom_toBottomOf="@+id/ivLikeMark"
            android:text=" 32개"
            android:textSize="13dp"
            android:textColor="#666666"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글달기"
            android:textColor="#666666"
            android:fontFamily="@font/notosans"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@+id/tvLikeCount"
            app:layout_constraintLeft_toRightOf="@+id/tvLikeCount"
            android:textSize="13dp"
            android:layout_marginLeft="20dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>